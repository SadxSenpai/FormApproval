@page "/"

<h2 style="margin:20px;color:#fff">hello dashboard</h2>

<section class="grid">
    <div class="card">
        <div class="card-head">
            <h3>My Requests <span class="pill small">1 open</span></h3>
            <div class="card-tools">
                <input class="input" placeholder="Filter by keyword…" />
                <a href="/new" class="btn primary">+ New</a>
            </div>
        </div>

        <div class="table">
            <div class="thead">
                <div>Type</div>
                <div>Details</div>
                <div>Dates / Hours</div>
                <div>Status</div>
                <div>Approver</div>
            </div>

            <div class="tbody">
                <div class="tr">
                    <div>PTO</div>
                    <div>Paid</div>
                    <div>2025-09-12 → 2025-09-16 (4d)</div>
                    <div><span class="badge warn">Pending</span></div>
                    <div>Alice Manager</div>
                </div>

                <div class="tr">
                    <div>Overtime</div>
                    <div>FormApproval</div>
                    <div>2025-08-20 • 3.0h @@ Weekday</div>  @* NOTE: '@@' renders a literal '@' *@
                    <div><span class="badge ok">Approved</span></div>
                    <div>Bob Lead</div>
                </div>

                <div class="tr">
                    <div>PTO</div>
                    <div>Sick</div>
                    <div>2025-08-05 → 2025-08-05 (1d)</div>
                    <div><span class="badge err">Rejected</span></div>
                    <div>Carol HR</div>
                </div>
            </div>
        </div>
    </div>

    <div class="stack">
        <!-- Remaining workdays (radial) -->
        <div class="card stat">
            <div class="stat-title">Remaining Workdays</div>
            <div class="stat-row" style="display:flex; align-items:center; gap:14px;">
                <div class="big">17 <span>days</span></div>
                <!-- 17/30 => 56.7% -->
                <div class="ring"><div class="ring-fill" style="--v:56.7%"></div></div>
            </div>
            <div style="color:var(--muted)">57% of 30 days</div>
        </div>

        <!-- Overtime (line graph) -->
        <div class="card stat plum">
            <div class="stat-title">Overtime This Month</div>
            <div class="big">12.0 <span>h</span></div>
            <div style="color:var(--muted); margin-bottom:6px;">30% of 40 h</div>
            <svg width="100%" height="70" viewBox="0 0 220 60" preserveAspectRatio="none" role="img" aria-label="Overtime hours trend">
                <desc>Line trend of overtime accumulation</desc>
                <!-- baseline -->
                <line x1="0" y1="50" x2="220" y2="50" stroke="rgba(255,255,255,.08)" stroke-width="1"/>
                <!-- trend line -->
                <polyline points="0,50 35,47 70,42 105,45 140,30 175,22 210,26"
                          fill="none" stroke="var(--pink)" stroke-width="2"/>
                <!-- fill under line -->
                <polyline points="0,50 35,47 70,42 105,45 140,30 175,22 210,26 210,60 0,60"
                          fill="rgba(255,79,216,.12)" stroke="none"/>
                <!-- current point -->
                <circle cx="210" cy="26" r="3" fill="var(--pink)"/>
            </svg>
        </div>

        <div class="card stat outline">
            <div class="stat-title">Upcoming Time Off</div>
            <div class="chip soft">Sep 12 – Sep 16 • 4 workdays</div>
        </div>
    </div>
</section>

<footer class="foot">
    © 2025 <b>FormApproval</b> — Neon-Dark Mock UI.
    <span class="kbd">/</span> focus search ·
    <span class="kbd">Alt + N</span> new request ·
</footer>

<style>
    html, body {
        background: radial-gradient(1400px 600px at 20% -10%, rgba(124,92,255,.15), transparent), radial-gradient(1200px 700px at 120% 20%, rgba(38,208,124,.12), transparent), var(--bg) !important;
        color: var(--text);
    }
    .page { min-height: calc(100vh - 120px); }
    .container, .content, main, .page { background: transparent !important; }
</style>