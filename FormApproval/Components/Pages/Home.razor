@page "/"

<section class="grid">
    <div class="card">
        <div class="card-head">
            <h3>My Requests <span class="pill small">1 open</span></h3>
            <div class="card-tools">
                <input class="input" placeholder="Filter by keyword…" />
                <a href="/new" class="btn primary">+ New</a>
            </div>
        </div>

        <div class="table">
            <div class="thead">
                <div>Type</div>
                <div>Details</div>
                <div>Dates / Hours</div>
                <div>Status</div>
                <div>Approver</div>
            </div>

            <div class="tbody">
                <div class="tr">
                    <div>PTO</div>
                    <div>Paid</div>
                    <div>2025-09-12 → 2025-09-16 (4d)</div>
                    <div><span class="badge warn">Pending</span></div>
                    <div>Alice Manager</div>
                </div>

                <div class="tr">
                    <div>Overtime</div>
                    <div>FormApproval</div>
                    <div>2025-08-20 • 3.0h @@ Weekday</div>  @* NOTE: '@@' renders a literal '@' *@
                    <div><span class="badge ok">Approved</span></div>
                    <div>Bob Lead</div>
                </div>

                <div class="tr">
                    <div>PTO</div>
                    <div>Sick</div>
                    <div>2025-08-05 → 2025-08-05 (1d)</div>
                    <div><span class="badge err">Rejected</span></div>
                    <div>Carol HR</div>
                </div>
            </div>
        </div>
    </div>

    <div class="stack">
        <div class="card stat">
            <div class="stat-title">PTO Balance</div>
            <div class="stat-row">
                <div class="big">18.5 <span>days</span></div>
                <div class="ring"><div class="ring-fill" style="--v:72%"></div></div>
            </div>
        </div>

        <div class="card stat plum">
            <div class="stat-title">Overtime This Month</div>
            <div class="stat-row">
                <div class="big">12.0 <span>h</span></div>
                <div class="bars"><i></i><i></i><i class="hi"></i></div>
            </div>
        </div>

        <div class="card stat outline">
            <div class="stat-title">Upcoming Time Off</div>
            <div class="chip soft">Sep 12 – Sep 16 • 4 workdays</div>
        </div>
    </div>
</section>

<footer class="foot">
    © 2025 <b>FormApproval</b> — Neon-Dark Mock UI.
    <span class="kbd">/</span> focus search ·
    <span class="kbd">Alt + N</span> new request ·
</footer>

<style>
    html, body {
        background: radial-gradient(1400px 600px at 20% -10%, rgba(124,92,255,.15), transparent), radial-gradient(1200px 700px at 120% 20%, rgba(38,208,124,.12), transparent), var(--bg) !important;
        color: var(--text);
    }

    /* give the content area some height so you can see the gradient even on empty pages */
    .page {
        min-height: calc(100vh - 120px);
    }

    /* just in case any container brings a white bg */
    .container, .content, main, .page {
        background: transparent !important;
    }
</style>