@page "/submitted"
@* Simple success page shown after a valid submission. *@
@inject NavigationManager Nav

<h3>Submitted</h3>

<div class="alert alert-success mt-4" role="alert">
    <h4 class="alert-heading">Request Submitted!</h4>
    <p>Your leave request has been submitted successfully.</p>
    <hr />
    <button class="btn btn-primary" @onclick="GoToDashboard">Go to Dashboard</button>
</div>

@code {
    // Navigate back to the dashboard to view submissions/approvals.
    private void GoToDashboard()
    {
        Nav.NavigateTo("/dashboard");
    }
}
