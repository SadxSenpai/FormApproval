@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<HeadContent>
  <link rel="stylesheet" href="css/neon.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    .chip.disabled { opacity:.55; cursor:not-allowed; pointer-events:none }
  </style>
</HeadContent>

<div class="app-root">
  <header class="topbar">
    <div class="brand">
      <div class="logo-dot"></div>
      <div>
        <div class="brand-title">FormApproval</div>
        <div class="brand-sub">Blazor-style PTO &amp; Overtime</div>
      </div>
    </div>

    <nav class="topnav">
      <a href="/" class="chip @(IsHome() ? "active" : null)">Dashboard</a>
      <a href="/new" class="chip @(Is("/new") ? "active" : null)">New Request</a>
      <a class="chip disabled" role="link" aria-disabled="true" tabindex="-1">Approvals</a>
      <a class="chip disabled" role="link" aria-disabled="true" tabindex="-1">Admin</a>
    </nav>

    <div class="actions">
      <div class="accent-group">
        <span class="status-dot on"></span>
      </div>
    </div>
  </header>

  <main class="page">
    @Body
  </main>
</div>

@code {
  bool Is(string path) => NavigationManager.Uri.Contains(path, StringComparison.OrdinalIgnoreCase);
  bool IsHome() => string.IsNullOrEmpty(NavigationManager.ToBaseRelativePath(NavigationManager.Uri));
}